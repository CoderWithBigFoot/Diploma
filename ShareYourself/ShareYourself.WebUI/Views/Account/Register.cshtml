@using ShareYourself.WebUI.Models;
@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Title = "Sign up";
    // Should add a immideatly validation 
}
    @section Styles{
        @Styles.Render("~/Content/RegisterLogin");
        }
    @section Body{
    <div class="container container-margin">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4 register-container">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken();
                    <div class="form-group">
                        <div class="col-sm-offset-1 col-sm-10">
                            <h2>Sign up</h2>
                            <br>
                            <hr>
                        </div>
                    </div>
                        @Html.ValidationSummary(true);
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                                @Html.ValidationMessageFor(x => x.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @placeholder = "Surname" })
                                @Html.ValidationMessageFor(x => x.Surname)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(x => x.Email)
                                <br>
                                <hr>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm password" })
                                @Html.ValidationMessageFor(x => x.ConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                <button type="submit" class="btn btn-default base-custom-button" style="width:100%;">Sign up</button>
                            </div>
                        </div>
                        }
                    </div>
        </div>
    </div>
   }
