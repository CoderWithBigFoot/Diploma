<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="top-nav">
        <div class="row">
            <div class="col-sm-offset-1 col-sm-2">
                <h4><span class="header-share">Share</span><span class="header-yourself">Yourself</span></h4>
            </div>
            <div class="col-sm-offset-6 col-sm-3">
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken();
                        <button type="submit" class="btn btn-default btn-sm base-custom-button" style="margin:auto;"><span class="glyphicon glyphicon-log-out"></span> Sign out</button>
                    }
                }
                else
                {
                    <a href="@Url.Action("Login","Account")"><span class="glyphicon glyphicon-log-in"></span> Sign in</a>
                    <a href="@Url.Action("Register","Account")">Sign up</a>
                }
            </div>
        </div>
    </div>
    @RenderSection("Header", false)
    @RenderSection("Styles", false)
    @RenderSection("Scripts", false)
    @RenderSection("Body", true)
    @RenderSection("Footer", false)
</body>
</html>
